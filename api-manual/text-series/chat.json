{
  "openapi": "3.1.0",
  "info": {
    "title": "文本生成接口",
    "description": "文本生成相关的AI服务接口，支持聊天对话等功能",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/chat/completions": {
      "post": {
        "summary": "聊天对话接口",
        "description": "与各种大语言模型进行对话交互，支持文本和多模态输入，完全兼容 OpenAI Chat Completions API",
        "operationId": "createChatCompletion",
        "tags": ["文本生成"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatCompletionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "聊天对话响应",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatCompletionResponse"
                }
              },
              "text/event-stream": {
                "schema": {
                  "type": "string",
                  "description": "流式响应，Server-Sent Events 格式"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatCompletionRequest": {
        "type": "object",
        "required": ["model", "messages"],
        "properties": {
          "model": {
            "type": "string",
            "description": "使用的模型名称",
            "enum": [
              "gpt-4o",
              "gpt-4o-mini", 
              "gpt-4-turbo",
              "gpt-3.5-turbo",
              "claude-3-opus",
              "claude-3-sonnet", 
              "claude-3-haiku",
              "gemini-pro",
              "qwen-max"
            ]
          },
          "messages": {
            "type": "array",
            "description": "对话消息列表",
            "items": {
              "$ref": "#/components/schemas/ChatMessage"
            },
            "minItems": 1
          },
          "temperature": {
            "type": "number",
            "minimum": 0,
            "maximum": 2,
            "default": 1,
            "description": "随机性控制，0-2之间"
          },
          "max_tokens": {
            "type": "integer",
            "minimum": 1,
            "maximum": 32768,
            "description": "最大生成token数"
          },
          "top_p": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 1,
            "description": "核采样参数"
          },
          "stream": {
            "type": "boolean",
            "default": false,
            "description": "是否流式返回"
          },
          "stop": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ],
            "description": "停止序列"
          },
          "presence_penalty": {
            "type": "number",
            "minimum": -2,
            "maximum": 2,
            "default": 0
          },
          "frequency_penalty": {
            "type": "number",
            "minimum": -2,
            "maximum": 2,
            "default": 0
          },
          "user": {
            "type": "string",
            "description": "代表最终用户的唯一标识符"
          }
        }
      },
      "ChatMessage": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant"],
            "description": "消息角色"
          },
          "content": {
            "oneOf": [
              {
                "type": "string",
                "description": "文本消息内容"
              },
              {
                "type": "array",
                "description": "多模态消息内容",
                "items": {
                  "$ref": "#/components/schemas/ContentPart"
                }
              }
            ]
          },
          "name": {
            "type": "string",
            "description": "角色名称（可选）"
          }
        }
      },
      "ContentPart": {
        "type": "object",
        "discriminator": {
          "propertyName": "type"
        },
        "oneOf": [
          {
            "$ref": "#/components/schemas/TextContentPart"
          },
          {
            "$ref": "#/components/schemas/ImageContentPart"
          }
        ]
      },
      "TextContentPart": {
        "type": "object",
        "required": ["type", "text"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["text"]
          },
          "text": {
            "type": "string",
            "description": "文本内容"
          }
        }
      },
      "ImageContentPart": {
        "type": "object",
        "required": ["type", "image_url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["image_url"]
          },
          "image_url": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri",
                "description": "图片URL"
              }
            }
          }
        }
      },
      "ChatCompletionResponse": {
        "type": "object",
        "required": ["id", "object", "created", "model", "choices"],
        "properties": {
          "id": {
            "type": "string",
            "description": "聊天完成ID",
            "example": "chatcmpl-123"
          },
          "object": {
            "type": "string",
            "enum": ["chat.completion"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "实际使用的模型",
            "example": "gpt-4o"
          },
          "choices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChatChoice"
            },
            "description": "生成选择列表"
          },
          "usage": {
            "$ref": "#/components/schemas/Usage",
            "description": "Token使用统计"
          },
          "system_fingerprint": {
            "type": "string",
            "description": "系统指纹"
          }
        }
      },
      "ChatChoice": {
        "type": "object",
        "required": ["index", "message", "finish_reason"],
        "properties": {
          "index": {
            "type": "integer",
            "description": "选择索引"
          },
          "message": {
            "$ref": "#/components/schemas/AssistantMessage",
            "description": "助手回复消息"
          },
          "finish_reason": {
            "type": "string",
            "enum": ["stop", "length", "tool_calls", "content_filter"],
            "description": "结束原因"
          },
          "logprobs": {
            "type": "object",
            "nullable": true,
            "description": "对数概率信息"
          }
        }
      },
      "AssistantMessage": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["assistant"],
            "description": "固定为assistant"
          },
          "content": {
            "type": "string",
            "nullable": true,
            "description": "回复内容"
          },
          "tool_calls": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "object"
            },
            "description": "工具调用信息"
          }
        }
      },
      "Usage": {
        "type": "object",
        "required": ["prompt_tokens", "completion_tokens", "total_tokens"],
        "properties": {
          "prompt_tokens": {
            "type": "integer",
            "description": "输入token数",
            "example": 50
          },
          "completion_tokens": {
            "type": "integer",
            "description": "生成token数",
            "example": 55
          },
          "total_tokens": {
            "type": "integer",
            "description": "总计token数",
            "example": 105
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息",
                "example": "Invalid request format"
              },
              "type": {
                "type": "string",
                "description": "错误类型",
                "example": "invalid_request_error"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数",
                "example": "model"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "文本生成",
      "description": "文本生成相关接口"
    }
  ]
}
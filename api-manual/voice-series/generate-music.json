{
  "openapi": "3.1.0",
  "info": {
    "title": "音乐生成接口",
    "description": "使用AI模型生成音乐，支持多种音乐生成模型和风格",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/audio/generations": {
      "post": {
        "summary": "音乐生成接口",
        "description": "使用AI模型生成音乐，支持多种音乐生成模型和风格",
        "operationId": "createMusicGeneration",
        "tags": ["音频处理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MusicGenerationRequest"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "异步任务创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MusicTaskResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MusicGenerationRequest": {
        "type": "object",
        "required": ["model", "prompt"],
        "properties": {
          "model": {
            "type": "string",
            "description": "音乐生成模型",
            "enum": ["suno-v3.5", "suno-v4", "udio-v1"],
            "example": "suno-v3.5"
          },
          "prompt": {
            "type": "string",
            "description": "音乐描述提示词",
            "example": "轻柔的钢琴旋律，带有温暖的氛围"
          },
          "duration": {
            "type": "integer",
            "minimum": 15,
            "maximum": 300,
            "default": 30,
            "description": "音乐时长（秒）"
          },
          "format": {
            "type": "string",
            "enum": ["mp3", "wav"],
            "default": "mp3",
            "description": "输出格式"
          },
          "model_params": {
            "type": "object",
            "description": "模型特定参数",
            "properties": {
              "mode": {
                "type": "string",
                "enum": ["inspiration", "custom", "extend"],
                "description": "生成模式（Suno）"
              },
              "lyrics": {
                "type": "string",
                "description": "歌词内容（Suno）"
              },
              "title": {
                "type": "string",
                "description": "歌曲标题（Suno）"
              },
              "tags": {
                "type": "string",
                "description": "音乐风格标签（Suno）"
              }
            }
          },
          "callback_url": {
            "type": "string",
            "format": "uri",
            "description": "异步回调地址"
          }
        }
      },
      "MusicTaskResponse": {
        "type": "object",
        "required": ["id", "object", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "任务ID",
            "example": "music-task-123"
          },
          "object": {
            "type": "string",
            "enum": ["audio.music.task"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "使用的模型",
            "example": "suno-v3.5"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "failed"],
            "description": "任务状态"
          },
          "progress": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "任务进度"
          },
          "task_info": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["generation"],
                "description": "任务类型"
              },
              "mode": {
                "type": "string",
                "description": "生成模式"
              },
              "estimated_time": {
                "type": "integer",
                "description": "预计耗时（秒）"
              },
              "queue_position": {
                "type": "integer",
                "description": "队列位置"
              }
            }
          },
          "usage": {
            "$ref": "#/components/schemas/AudioUsage",
            "description": "使用统计"
          }
        }
      },
      "AudioUsage": {
        "type": "object",
        "properties": {
          "audio_seconds": {
            "type": "number",
            "description": "音频时长（秒）"
          },
          "duration_generated": {
            "type": "number",
            "description": "生成的音频时长（秒）"
          },
          "credits_used": {
            "type": "number",
            "description": "消耗的积分数"
          },
          "credits_reserved": {
            "type": "integer",
            "description": "预留的积分数"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "音频处理",
      "description": "音频处理相关接口，包括语音转文字、文字转语音和音乐生成"
    }
  ]
}
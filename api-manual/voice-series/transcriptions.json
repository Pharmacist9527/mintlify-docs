{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 语音转文字接口",
    "description": "将音频文件转换为文字，支持多种音频格式和语言",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/v1",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/audio/transcriptions": {
      "post": {
        "summary": "语音转文字接口",
        "description": "将音频文件转换为文字，支持多种音频格式和语言",
        "operationId": "createTranscription",
        "tags": ["音频处理"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/TranscriptionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "转录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TranscriptionResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TranscriptionRequest": {
        "type": "object",
        "required": ["model", "file"],
        "properties": {
          "model": {
            "type": "string",
            "description": "STT模型名称",
            "enum": ["whisper-1", "whisper-large-v3"],
            "example": "whisper-1"
          },
          "file": {
            "type": "string",
            "format": "binary",
            "description": "音频文件（mp3, wav, m4a等）"
          },
          "language": {
            "type": "string",
            "description": "音频语言（ISO 639-1代码）",
            "example": "zh"
          },
          "prompt": {
            "type": "string",
            "description": "转录指导文本"
          },
          "response_format": {
            "type": "string",
            "enum": ["json", "text", "srt", "verbose_json", "vtt"],
            "default": "json",
            "description": "响应格式"
          },
          "temperature": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0,
            "description": "随机性控制"
          }
        }
      },
      "TranscriptionResponse": {
        "type": "object",
        "required": ["id", "object", "created", "model", "text"],
        "properties": {
          "id": {
            "type": "string",
            "description": "转录任务ID",
            "example": "stt-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["audio.transcription"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "使用的模型",
            "example": "whisper-1"
          },
          "text": {
            "type": "string",
            "description": "转录的文本内容",
            "example": "这是转录的文本内容"
          },
          "language": {
            "type": "string",
            "description": "检测到的语言",
            "example": "zh"
          },
          "duration": {
            "type": "number",
            "description": "音频时长（秒）",
            "example": 10.5
          },
          "segments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "段落ID"
                },
                "text": {
                  "type": "string",
                  "description": "段落文本"
                },
                "start": {
                  "type": "number",
                  "description": "开始时间（秒）"
                },
                "end": {
                  "type": "number",
                  "description": "结束时间（秒）"
                },
                "confidence": {
                  "type": "number",
                  "description": "置信度"
                }
              }
            },
            "description": "转录段落详情"
          },
          "usage": {
            "$ref": "#/components/schemas/AudioUsage",
            "description": "使用统计"
          }
        }
      },
      "AudioUsage": {
        "type": "object",
        "properties": {
          "audio_seconds": {
            "type": "number",
            "description": "音频时长（秒）"
          },
          "duration_generated": {
            "type": "number",
            "description": "生成的音频时长（秒）"
          },
          "credits_used": {
            "type": "number",
            "description": "消耗的积分数"
          },
          "credits_reserved": {
            "type": "integer",
            "description": "预留的积分数"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "音频处理",
      "description": "音频处理相关接口，包括语音转文字、文字转语音和音乐生成"
    }
  ]
}
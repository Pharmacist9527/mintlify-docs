{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 图像编辑接口",
    "description": "基于原图和蒙版进行智能图像编辑，支持局部修复、内容替换等功能",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/images/edits": {
      "post": {
        "summary": "图像编辑接口",
        "description": "基于原图和蒙版进行智能图像编辑，支持局部修复、内容替换等功能",
        "operationId": "createImageEdit",
        "tags": ["图像生成"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/ImageEditRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "图像编辑响应",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ImageGenerationResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ImageEditRequest": {
        "type": "object",
        "required": ["model", "image", "prompt"],
        "properties": {
          "model": {
            "type": "string",
            "description": "图像编辑模型",
            "enum": ["dall-e-2", "stable-diffusion-inpainting"]
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "要编辑的图像文件"
          },
          "mask": {
            "type": "string",
            "format": "binary",
            "description": "蒙版图像文件"
          },
          "prompt": {
            "type": "string",
            "description": "编辑描述",
            "example": "Remove the background and add a forest"
          },
          "n": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "default": 1,
            "description": "生成数量"
          },
          "size": {
            "type": "string",
            "enum": ["256x256", "512x512", "1024x1024"],
            "default": "1024x1024",
            "description": "输出尺寸"
          },
          "response_format": {
            "type": "string",
            "enum": ["url", "b64_json"],
            "default": "url"
          },
          "user": {
            "type": "string",
            "description": "代表最终用户的唯一标识符"
          }
        }
      },
      "ImageGenerationResponse": {
        "type": "object",
        "required": ["id", "object", "created", "model", "data"],
        "properties": {
          "id": {
            "type": "string",
            "description": "生成任务ID",
            "example": "img-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["image.generation"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "实际使用的模型",
            "example": "midjourney-v6"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GeneratedImage"
            },
            "description": "生成的图像列表"
          },
          "usage": {
            "$ref": "#/components/schemas/ImageUsage",
            "description": "使用统计"
          }
        }
      },
      "GeneratedImage": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "图像URL",
            "example": "https://example.com/image.png"
          },
          "b64_json": {
            "type": "string",
            "description": "Base64编码的图像数据"
          },
          "revised_prompt": {
            "type": "string",
            "description": "修订后的提示词"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "width": {
                "type": "integer"
              },
              "height": {
                "type": "integer"
              },
              "mime_type": {
                "type": "string"
              },
              "file_size": {
                "type": "integer"
              }
            }
          }
        }
      },
      "ImageUsage": {
        "type": "object",
        "properties": {
          "images_generated": {
            "type": "integer",
            "description": "生成的图像数量"
          },
          "credits_used": {
            "type": "number",
            "description": "消耗的积分数"
          },
          "compute_time_ms": {
            "type": "integer",
            "description": "计算耗时（毫秒）"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "图像生成",
      "description": "AI图像生成相关接口"
    }
  ]
}
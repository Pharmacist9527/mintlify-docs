{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 获取模型详情接口",
    "description": "根据模型ID获取特定模型的详细信息",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/models/{model}": {
      "get": {
        "summary": "获取特定模型信息",
        "description": "根据模型ID获取特定模型的详细信息",
        "operationId": "getModelDetail",
        "tags": ["任务管理"],
        "parameters": [
          {
            "name": "model",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "模型ID",
            "example": "gpt-4o"
          }
        ],
        "responses": {
          "200": {
            "description": "模型信息获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ModelDetailResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "模型不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ModelDetailResponse": {
        "$ref": "#/components/schemas/ModelInfo"
      },
      "ModelInfo": {
        "type": "object",
        "required": ["id", "object", "created", "owned_by"],
        "properties": {
          "id": {
            "type": "string",
            "description": "模型标识符",
            "example": "gpt-4o"
          },
          "object": {
            "type": "string",
            "enum": ["model"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1626777600
          },
          "owned_by": {
            "type": "string",
            "description": "模型提供商",
            "example": "openai"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "任务管理",
      "description": "异步任务管理相关接口"
    }
  ]
}
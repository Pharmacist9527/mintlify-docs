{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 批量获取任务接口",
    "description": "一次查询多个任务的状态信息，最多支持50个任务ID",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/tasks/batch": {
      "post": {
        "summary": "批量查询任务",
        "description": "一次查询多个任务的状态信息，最多支持50个任务ID",
        "operationId": "batchGetTasks",
        "tags": ["任务管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BatchTaskRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "批量查询成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BatchTaskResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BatchTaskRequest": {
        "type": "object",
        "required": ["task_ids"],
        "properties": {
          "task_ids": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "maxItems": 50,
            "description": "任务ID列表（最多50个）",
            "example": ["task-unified-123", "task-unified-456", "task-unified-789"]
          }
        }
      },
      "BatchTaskResponse": {
        "type": "object",
        "required": ["object", "data"],
        "properties": {
          "object": {
            "type": "string",
            "enum": ["list"],
            "description": "对象类型"
          },
          "data": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/TaskDetailResponse"
                },
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "任务ID"
                    },
                    "error": {
                      "type": "string",
                      "description": "错误信息"
                    }
                  }
                }
              ]
            },
            "description": "任务详情列表或错误信息"
          }
        }
      },
      "TaskDetailResponse": {
        "type": "object",
        "required": ["id", "object", "created", "model", "type", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "任务ID",
            "example": "task-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["task"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "任务创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "使用的模型",
            "example": "midjourney-v6"
          },
          "type": {
            "type": "string",
            "description": "任务类型",
            "enum": ["image.generation", "video.generation", "audio.generation", "text.generation"],
            "example": "image.generation"
          },
          "status": {
            "type": "string",
            "description": "任务状态",
            "enum": ["pending", "processing", "completed", "failed"],
            "example": "processing"
          },
          "progress": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "任务进度百分比",
            "example": 75
          },
          "data": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "object"
            },
            "description": "任务结果数据（完成时提供）"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "任务管理",
      "description": "异步任务管理相关接口"
    }
  ]
}
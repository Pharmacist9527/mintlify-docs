{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 取消任务接口",
    "description": "取消指定的异步任务，仅支持pending和processing状态的任务",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/v1",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/tasks/{task_id}": {
      "delete": {
        "summary": "取消任务",
        "description": "取消指定的异步任务，仅支持pending和processing状态的任务",
        "operationId": "cancelTask",
        "tags": ["任务管理"],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "要取消的任务ID",
            "example": "task-unified-123"
          }
        ],
        "responses": {
          "200": {
            "description": "任务取消成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskCancelResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误或任务无法取消",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "任务不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskCancelResponse": {
        "type": "object",
        "required": ["id", "object", "status", "message"],
        "properties": {
          "id": {
            "type": "string",
            "description": "任务ID",
            "example": "task-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["task.cancelled"],
            "description": "对象类型"
          },
          "status": {
            "type": "string",
            "enum": ["cancelled"],
            "description": "任务状态"
          },
          "message": {
            "type": "string",
            "description": "取消结果消息",
            "example": "Task has been cancelled successfully"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "任务管理",
      "description": "异步任务管理相关接口"
    }
  ]
}
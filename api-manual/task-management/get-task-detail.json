{
  "openapi": "3.1.0",
  "info": {
    "title": "GroAPI 获取任务详情接口",
    "description": "根据任务ID查询异步任务的状态、进度和结果信息",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/tasks/{task_id}": {
      "get": {
        "summary": "查询任务状态",
        "description": "根据任务ID查询异步任务的状态、进度和结果信息",
        "operationId": "getTaskDetail",
        "tags": ["任务管理"],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "任务ID",
            "example": "task-unified-123"
          }
        ],
        "responses": {
          "200": {
            "description": "任务状态详情",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskDetailResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "任务不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskDetailResponse": {
        "type": "object",
        "required": ["id", "object", "created", "model", "type", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "任务ID",
            "example": "task-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["task"],
            "description": "对象类型"
          },
          "created": {
            "type": "integer",
            "description": "任务创建时间戳",
            "example": 1699000000
          },
          "model": {
            "type": "string",
            "description": "使用的模型",
            "example": "midjourney-v6"
          },
          "type": {
            "type": "string",
            "description": "任务类型",
            "enum": ["image.generation", "video.generation", "audio.generation", "text.generation"],
            "example": "image.generation"
          },
          "status": {
            "type": "string",
            "description": "任务状态",
            "enum": ["pending", "processing", "completed", "failed"],
            "example": "processing"
          },
          "progress": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "任务进度百分比",
            "example": 75
          },
          "data": {
            "type": "array",
            "nullable": true,
            "items": {
              "type": "object"
            },
            "description": "任务结果数据（完成时提供）"
          },
          "timestamps": {
            "type": "object",
            "description": "时间戳信息",
            "properties": {
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "创建时间",
                "example": "2024-01-01T00:00:00Z"
              },
              "started_at": {
                "type": "string",
                "format": "date-time",
                "nullable": true,
                "description": "开始时间",
                "example": "2024-01-01T00:00:05Z"
              },
              "completed_at": {
                "type": "string",
                "format": "date-time",
                "nullable": true,
                "description": "完成时间"
              }
            }
          },
          "usage": {
            "type": "object",
            "description": "资源使用情况",
            "properties": {
              "credits_reserved": {
                "type": "integer",
                "description": "预留的积分数",
                "example": 1
              },
              "credits_used": {
                "type": "integer",
                "nullable": true,
                "description": "实际消耗的积分数"
              }
            }
          },
          "error": {
            "type": "object",
            "nullable": true,
            "description": "错误信息（失败时提供）",
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "code": {
                "type": "string",
                "description": "错误代码"
              }
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "任务管理",
      "description": "异步任务管理相关接口"
    }
  ]
}
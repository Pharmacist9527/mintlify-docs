{
  "openapi": "3.1.0",
  "info": {
    "title": "获取任务列表接口",
    "description": "获取用户的任务列表，支持状态过滤和分页",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.evolink.ai",
      "description": "生产环境"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/tasks": {
      "get": {
        "summary": "获取任务列表",
        "description": "获取用户的任务列表，支持状态过滤和分页",
        "operationId": "getTaskList",
        "tags": ["任务管理"],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["pending", "processing", "completed", "failed", "all"],
              "default": "all"
            },
            "description": "任务状态过滤"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["image.generation", "video.generation", "audio.generation", "all"],
              "default": "all"
            },
            "description": "任务类型过滤"
          },
          {
            "name": "model",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "all"
            },
            "description": "模型过滤"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "description": "每页数量"
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "description": "偏移量"
          },
          {
            "name": "order_by",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["created_at", "updated_at", "progress"],
              "default": "created_at"
            },
            "description": "排序字段"
          },
          {
            "name": "order",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            },
            "description": "排序方向"
          }
        ],
        "responses": {
          "200": {
            "description": "任务列表获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskListResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "请求频率过高",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskListResponse": {
        "type": "object",
        "required": ["object", "data"],
        "properties": {
          "object": {
            "type": "string",
            "enum": ["list"],
            "description": "对象类型"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TaskSummary"
            },
            "description": "任务列表"
          },
          "has_more": {
            "type": "boolean",
            "description": "是否还有更多数据"
          },
          "total": {
            "type": "integer",
            "description": "总数量",
            "example": 150
          }
        }
      },
      "TaskSummary": {
        "type": "object",
        "required": ["id", "object", "type", "status", "model", "created"],
        "properties": {
          "id": {
            "type": "string",
            "description": "任务ID",
            "example": "task-unified-123"
          },
          "object": {
            "type": "string",
            "enum": ["task"],
            "description": "对象类型"
          },
          "type": {
            "type": "string",
            "description": "任务类型",
            "enum": ["image.generation", "video.generation", "audio.generation", "text.generation"],
            "example": "image.generation"
          },
          "status": {
            "type": "string",
            "description": "任务状态",
            "enum": ["pending", "processing", "completed", "failed"],
            "example": "completed"
          },
          "model": {
            "type": "string",
            "description": "使用的模型",
            "example": "midjourney-v6"
          },
          "created": {
            "type": "integer",
            "description": "创建时间戳",
            "example": 1699000000
          },
          "progress": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "任务进度百分比"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["message", "type"],
            "properties": {
              "message": {
                "type": "string",
                "description": "错误消息"
              },
              "type": {
                "type": "string",
                "description": "错误类型"
              },
              "param": {
                "type": "string",
                "nullable": true,
                "description": "相关参数"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "使用Bearer Token进行认证，格式：Authorization: Bearer YOUR_API_KEY"
      }
    }
  },
  "tags": [
    {
      "name": "任务管理",
      "description": "异步任务管理相关接口"
    }
  ]
}